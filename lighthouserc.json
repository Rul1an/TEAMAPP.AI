{
  "ci": {
    "collect": {
      "staticDistDir": "build/web",
      "numberOfRuns": 3,
      "settings": {
        "preset": "desktop",
        "chromeFlags": "--no-sandbox --disable-dev-shm-usage --disable-gpu"
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": [
          "error",
          {
            "minScore": 0.75
          }
        ],
        "categories:pwa": [
          "error",
          {
            "minScore": 0.9
          }
        ],
        "categories:accessibility": [
          "warn",
          {
            "minScore": 0.85
          }
        ],
        "categories:best-practices": [
          "warn",
          {
            "minScore": 0.9
          }
        ],
        "categories:seo": [
          "warn",
          {
            "minScore": 0.9
          }
        ],
        "total-blocking-time": [
          "warn",
          {
            "maxNumericValue": 1500
          }
        ]
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}
